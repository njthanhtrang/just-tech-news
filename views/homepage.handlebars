<ol class="post-list">
    {{!-- any HTML between #each repeated for every item in posts --}}
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
          {{!-- double curlies used for HTML attributes --}}
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>
      </div>
      <div class="meta">
          {{!-- double curlies used for content --}}
        {{post.vote_count}} point(s) by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>


{{!-- 2 curlies convert HTML into strings (< becomes &lt;) --}}
{{!-- 3 curlies renders data as HTML --}}